<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_music"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anh_ngoc_trinh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_music"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/noti_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Nời Này Có Anh"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noti_author"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Nời Này Có Anh"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="#83837A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_previous"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_baseline_skip_previous_bkav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_play"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_play"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/costom_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_next"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_next"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_baseline_skip_next_bkav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>