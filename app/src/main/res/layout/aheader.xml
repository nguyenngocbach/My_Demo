<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ahear_view"
    >
    <LinearLayout
        android:id="@+id/listen_now"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/background_aheader"
        android:layout_marginTop="3dp"
        >
        <ImageView
            android:id="@+id/icon_listen_now"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/custom_music_player"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:id="@+id/txt_listen_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/listen_now"
            android:textStyle="bold"
            android:textColor="@color/ogin"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        >
        <ImageView
            android:id="@+id/icon_recent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_replay_10_24"
            android:layout_marginStart="12dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/txt_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:textStyle="bold"
            android:textColor="@color/grey_color"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_library"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        >
        <ImageView
            android:id="@+id/icon_muic_library"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_library_music_24"
            android:layout_marginStart="12dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/txt_music_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/music_lubrary"
            android:textStyle="bold"
            android:textColor="@color/grey_color"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#40403F"
        android:layout_marginTop="3dp"
        />
</LinearLayout>